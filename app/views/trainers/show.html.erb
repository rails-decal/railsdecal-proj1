<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<ul>
<% @trainer.pokemons.each do |pokemon| %>
	<%puts pokemon.name%>

	<h4><%= pokemon.name %></h4>
    <li>Level: <%= pokemon.level %></li>
    <li>Health: <%= pokemon.health %></li>
    <%= button_to "Damage!", damage_path(id: pokemon, trainer: @trainer.id), :class => "button medium", :method => :patch %>
<% end %>

<%= button_to "New Pokemon", pokemons_new_path, :class => "button medium", :method => :get %>
</ul>
